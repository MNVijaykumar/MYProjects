        function funCollectionBy(categoryId) {
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: getSingleProductPath,
                cache: false,
                data: {
                    categoryId: categoryId
                    //, __RequestVerificationToken: getAntiCsrfToken()
                },
                success: function (response) {
                    if (response.d == true) {
                        alert("You will now be redirected.");
                        window.location = getSingleProductPath;
                    }
                }
            });
        }
        function funDeliveryBy(DeliveryBy) {
            $("#DeliveryBy").val(DeliveryBy);
            $("#frmIndexSearch").submit();
        }

        function funChangeQty(qtyval, qtyId) {
            var qtyvalSpilt = qtyval.split("|*|");
            $("#itemQtyRate1_" + qtyId).html("Rs. " + forNum(parseFloat(qtyvalSpilt[2])));
            $("#itemQtyRate2_" + qtyId).html("Rs. " + forNum(parseFloat(qtyvalSpilt[2])));
            $("#selProduct1_" + qtyId).val(qtyval);
            $("#selProduct_" + qtyId).html(qtyval);

        }

        function forNum(num) {
            var num = num.toFixed(0);
            var str = num.toString().replace("$", ""), parts = false, output = [], i = 1, formatted = null;
            if (str.indexOf(".") > 0) {
                parts = str.split(".");
                str = parts[0];
            }
            str = str.split("").reverse();
            for (var j = 0, len = str.length; j < len; j++) {
                if (str[j] != ",") {
                    output.push(str[j]);
                    if (i % 3 == 0 && j < (len - 1)) {
                        output.push(",");
                    }
                    i++;
                }
            }
            formatted = output.reverse().join("");
            return (formatted + ((parts) ? "." + parts[1].substr(0, 2) : ""));
        }
    </script>
